<section id="contact" style="position: relative; padding: 50px 20px;">

    <!-- Arka Plan Resmi -->
    <img src="https://i.hizliresim.com/csuir4p.jpg" alt="Contact Background"
         style="width:100%; height:100%; object-fit:cover; position:absolute; top:0; left:0; z-index:0;" />

    <!-- Form ve İçerik -->
    <div style="position: relative; z-index:1; max-width:500px; margin:0 auto; background: #ffffff; padding:30px; border-radius:8px;">

        <h1 style="text-align:center; font-size:28px; margin-bottom:15px; color:black;">BANA ULAŞIN</h1>
        <p style="text-align:center; font-size:16px;font-family:Arial, 'Arial Narrow', Arial, sans-serif margin-bottom:25px; color:black;">
            Aşağıdaki formu doldurabilir veya iletişim bilgilerimi kullanabilirsiniz.
        </p>

        <form id="contactForm" method="post" action="">
            <input type="text" name="contactName" placeholder="İSİM" required
                   style="width:100%; padding:12px; margin-bottom:12px; border:1px solid #ccc; border-radius:5px; font-size:16px;">
            <input type="email" name="contactEmail" placeholder="EMAİL" required
                   style="width:100%; padding:12px; margin-bottom:12px; border:1px solid #ccc; border-radius:5px; font-size:16px;">
            <input type="text" name="contactSubject" placeholder="KONU"
                   style="width:100%; padding:12px; margin-bottom:12px; border:1px solid #ccc; border-radius:5px; font-size:16px;">
            <textarea name="contactMessage" placeholder="MESAJ" required
                      style="width:100%; padding:12px; margin-bottom:12px; border:1px solid #ccc; border-radius:5px; font-size:16px; resize:none; min-height:100px;"></textarea>
            <button type="submit"
                    style="width:100%; padding:14px; background:blue; color:white; border:none; border-radius:5px; font-size:16px; cursor:pointer; display:flex; align-items:center; justify-content:center;">
                GÖNDER
            </button>

        </form>

        <div style="text-align:center; margin-top:20px; color:#333;">
            <p style="margin:5px 0;"><strong>TELEFON:</strong> (+90) 538 065 9623</p>
            <p style="margin:5px 0;"><strong>EMAIL:</strong> indo@gmail.com</p>
        </div>

    </div>
</section>
