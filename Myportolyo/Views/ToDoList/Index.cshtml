@model List<ToDoList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int Count = 0;
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">

					<div class="card-header d-flex justify-content-between align-items-center">
						<h5 class="card-title mb-0 mx-auto">Yapılacaklar Listesi</h5>
					
					</div>





					<div class="card-body">
						<div class="card-sub mb-3" style="text-align:center;padding:10px; width:100%; box-sizing:border-box;">
							Yapılacaklarla ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>

						<table class="table table-striped table-bordered mx-auto" style="table-layout: fixed; width:100%;">

							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İçerik</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
                                    Count++;
									<tr>
										<td>@Count</td>
										<td>@item.Title</td>
										<td>@item.Date</td>

										@if (item.Status == true)
										{
											<td><a href="/ToDoList/ChangeIsReadToTrue/@item.ToDoListId" class="btn btn-primary">Yapıldı</a></td>
										}
										else
										{
											<td><a href="/ToDoList/ChangeIsReadToFalse/@item.ToDoListId" class="btn btn-info">Yapıldı OLarak İşaretle</a></td>
										}
										<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
										<td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Yeni Yapılacak İşlem Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


