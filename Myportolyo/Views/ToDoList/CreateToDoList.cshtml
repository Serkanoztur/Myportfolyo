@model ToDoList
@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}



	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Yapılacaklar</h4>
			<div class="row">
				<div class="col-md-12 ">
					<div class="card">
						<div class="card-header">
                            <div class="card-Title">Yeni Yapılacak İşlem Ekleme Sayfası

							</div>
							
					<div class="card-body">
					
							<form method="post">
								<label>Başlık & İçerik</label>
								<input type="text" class="form-control" asp-for="Title" />
								<br />
								<label>Tarih</label>
								<input type="date" class="form-control" asp-for="Date" />
								<br />
								<label>Görsel Yolu</label>
								<input type="text" class="form-control" asp-for="ImageUrl" />
								<br />

								<button type="submit" class="btn btn-primary">Yapılacak İşlemi Ekle</button>

							</form>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>




