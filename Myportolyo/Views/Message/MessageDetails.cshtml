@model Message
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">

					<div class="card-header d-flex justify-content-between align-items-center">
						<h5 class="card-title mb-0 mx-auto">Mesaj Detayları</h5>

					</div>

					<div class="card-body">
						<div class="card-sub mb-3" style="text-align:center;padding:10px; width:100%; box-sizing:border-box;">
                             Gönderen:> @Model.NameSurname
							<br />
							 email:> @Model.Email-
                            <br />
                             Tarih:>@Model.SendDate
							<br />
							<br />
                            Mesaj: @Model.MessageDetail
						</div>


					</div>
				</div>
			</div>
		</div>
	</div>
</div>

