@model Experience
@{
	ViewData["Title"] = "CreateExperience";
	Layout = "~/Views/Layout/Index.cshtml";
}


	<div class="content">
		<div class="container-fluid">
			<h4 class="page-title">Deneyim Ekleme Sayfası</h4>
			<div class="row">
				<div class="col-md-12 ">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Deneyim  Tablosu</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Deneyimler ile ilgili Ekleme işlemlerini aşağıdan yapabilirsiniz.
							</div>
							<form method="post">
								<label>Deneyim Başlıgı</label>
								<input type="text" class="form-control" asp-for="Head" />
								<br />
								<label>Çalışılan Pozisyon</label>
								<input type="text" class="form-control" asp-for="Title" />
								<br />
								<label>Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" />
								<br />

								<button type="submit" class="btn btn-primary">Deneyim Ekle</button>

							</form>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<footer class="footer">
		<div class="container-fluid">
			<nav class="pull-left">
				<ul class="nav">
					<li class="nav-item">
						<a class="nav-link" href="http://www.themekita.com">
